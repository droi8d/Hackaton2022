        <StackLayout>
            <Label Text="Nowy rachunek"
                VerticalOptions="StartAndExpand"
                HorizontalOptions="CenterAndExpand" />

            <StackLayout Spacing="20" Padding="15">
                <Label Text="Rachunek:" FontSize="Medium" />
                <Label Text="{Binding Id}" FontSize="Small" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>